<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" android:orientation="horizontal">
    <ImageView android:layout_marginLeft="5px" android:layout_marginTop="5px" android:layout_width="60px" android:layout_marginBottom="5px" android:layout_height="60px" android:id="@+id/icon" android:src="@drawable/icon" android:layout_marginRight="10px"></ImageView>
    <TableLayout android:id="@+id/tableLayout1" android:layout_height="match_parent" android:layout_width="wrap_content">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="35px" android:id="@+id/label" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@+id/label" android:maxLines="1" ></TextView>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="20px" android:id="@+id/underlabel" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@+id/underlabel"></TextView>
        </TableRow>
    </TableLayout>
  
  
</LinearLayout>
